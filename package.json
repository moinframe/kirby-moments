{
  "name": "moinframe-moments",
  "version": "2.0.0-beta.3",
  "description": "Little Moments Matter. Share Yours.",
  "homepage": "https://moinfra.me/docs/moinframe-moments",
  "scripts": {
    "build:css": "lightningcss --minify --bundle --targets '>= 0.25%' ./frontend/moments.css ./frontend/reset.css --output-dir ./assets/",
    "build:ts": "tsc && esbuild ./frontend/moments.ts --bundle --minify --format=esm --outfile=./assets/moments.min.js",
    "build": "pnpm build:css && pnpm build:ts",
    "dev": "turbowatch ./turbowatch.ts",
    "release": "release-it"
  },
  "author": "Justus Kraft <justus@moinfra.me>",
  "license": "MIT",
  "devDependencies": {
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.4",
    "esbuild": "^0.27.2",
    "lightningcss-cli": "^1.31.1",
    "release-it": "^19.2.4",
    "turbowatch": "^2.30.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.2"
}
